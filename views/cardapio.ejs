<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head', {titulo:tituloDaPagina})%>
<body>
    <%- include('includes/header') %>
    <div class="container">
        <section class="row p-5">

        <% if(cardapio != undefined && cardapio.length > 0) {%>  

            
       <% cardapio.forEach((pizza, index )=>{ %>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title"><%= pizza.nome %></h5>
                    <p class="card-text">R$ <%= pizza.preco %></p>
                    </div>
                    <div class="card-footer">
                        <button type="submit" data-toggle="modal" data-target="#pizza<%=index%>" class="btn btn-danger">Excluir</button>
                    </div>
                </div>
            </div>


            <!-- Modal -->
            <div class="modal fade" id="pizza<%=index%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                
                    <h5 class="modal-title" id="exampleModalLabel">Tem certeza que você quer excluir essa pizza?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                    ...
                    </div>
                    <div class="modal-footer">
                    
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Não</button>
                    <form action="/cardapio/deletar/<%=index%>?_method=DELETE" method="post">
                        
                        <input type="submit" class="btn btn-danger" value="Sim">
                    </form>
                    </div>
                </div>
                </div>
            </div>


       <% }) %>
        
        <% } else { %>
            <h1>Não tem pizzas cadastradas no sistema!</h1>
        <% } %>
          <div class="col-12 mt-5">
              <a href="/cardapio/cadastro" class="btn btn-primary">Cadastrar Nova pizza</a>
          </div>
        </section>
    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>